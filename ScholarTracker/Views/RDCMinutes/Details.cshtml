@model ScholarTracker.Models.RDCMinutesModel
@{
    Layout = "~/Views/Shared/Layout3.cshtml";
    ViewBag.Title = "RDC Minutes Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-clipboard-check me-2"></i>RDC Meeting Minutes
                        </h3>
                        <div class="badge bg-light text-primary fs-6">
                            <i class="fas fa-calendar-day me-1"></i>
                            @Model.MeetingDate.ToString("dd MMM yyyy")
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-card mb-4">
                                <h5 class="detail-card-header">
                                    <i class="fas fa-user-graduate me-2"></i>Scholar Information
                                </h5>
                                <div class="detail-card-body">
                                    <div class="detail-item">
                                        <span class="detail-label">Scholar Name:</span>
                                        <span class="detail-value">@Model.ScholarName</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-card mb-4">
                                <h5 class="detail-card-header">
                                    <i class="fas fa-user-tie me-2"></i>Supervisor Information
                                </h5>
                                <div class="detail-card-body">
                                    <div class="detail-item">
                                        <span class="detail-label">Supervisor Name:</span>
                                        <span class="detail-value">@Model.SupervisorName</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="detail-card mb-4">
                        <h5 class="detail-card-header">
                            <i class="fas fa-list-ol me-2"></i>Meeting Details
                        </h5>
                        <div class="detail-card-body">
                            <div class="detail-item">
                                <span class="detail-label">Agenda:</span>
                                <span class="detail-value">@Model.MeetingAgenda</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Discussion Points:</span>
                                <div class="detail-value">@Html.Raw(Model.DiscussionPoints.Replace("\n", "<br>"))</div>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Decisions Taken:</span>
                                <div class="detail-value">@Html.Raw(Model.DecisionsTaken.Replace("\n", "<br>"))</div>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Action Items:</span>
                                <div class="detail-value">@Html.Raw(Model.ActionItems.Replace("\n", "<br>"))</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-card">
                                <h5 class="detail-card-header">
                                    <i class="fas fa-calendar-plus me-2"></i>Next Meeting
                                </h5>
                                <div class="detail-card-body">
                                    <div class="detail-item">
                                        <span class="detail-label">Date:</span>
                                        <span class="detail-value">
                                            @(Model.NextMeetingDate?.ToString("dd MMM yyyy") ?? "Not scheduled")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-card">
                                <h5 class="detail-card-header">
                                    <i class="fas fa-history me-2"></i>Record History
                                </h5>
                                <div class="detail-card-body">
                                    <div class="detail-item">
                                        <span class="detail-label">Created On:</span>
                                        <span class="detail-value">@Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Last Updated:</span>
                                        <span class="detail-value">
                                            @(Model.LastUpdated?.ToString("dd MMM yyyy HH:mm") ?? "Never updated")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-card {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        height: 100%;
    }

    .detail-card-header {
        background-color: #f8f9fa;
        padding: 0.75rem 1rem;
        margin: 0;
        border-bottom: 1px solid #dee2e6;
        font-size: 1.1rem;
        color: #495057;
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .detail-card-body {
        padding: 1rem;
    }

    .detail-item {
        margin-bottom: 0.75rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px dashed #e9ecef;
    }

        .detail-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .detail-label {
        font-weight: 600;
        color: #495057;
        display: block;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        color: #212529;
        display: block;
    }
</style>