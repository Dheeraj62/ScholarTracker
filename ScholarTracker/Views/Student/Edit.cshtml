@model ScholarTracker.Models.StudentModel

@{
    ViewBag.Title = "Edit Student";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="container mt-4">
    <h2>Edit Student</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="mb-3">
            @Html.LabelFor(model => model.FullName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.FatherName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.MotherName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.MotherName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.AdmissionDate, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.AdmissionDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.EnrollmentNo, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.EnrollmentNo, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Back to List</a>
    }
</div>
