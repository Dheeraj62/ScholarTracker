@model ScholarTracker.Models.StudentModel

@{
    ViewBag.Title = "Create New Scholar";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Create New Scholar
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.FullName, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.FullName,
                                             new { @class = "form-control", placeholder = "Enter scholar's full name", required = "required" })
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "invalid-feedback" })
                                </div>

                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.FatherName, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.FatherName,
                                             new { @class = "form-control", placeholder = "Enter father's name" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.MotherName, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.MotherName,
                                             new { @class = "form-control", placeholder = "Enter mother's name" })
                                </div>

                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.AdmissionDate, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.AdmissionDate, "{0:yyyy-MM-dd}",
                                             new { @class = "form-control", type = "date", required = "required" })
                                    @Html.ValidationMessageFor(model => model.AdmissionDate, "", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.EnrollmentNo, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.EnrollmentNo,
                                             new { @class = "form-control", placeholder = "Enter enrollment number", required = "required" })
                                    @Html.ValidationMessageFor(model => model.EnrollmentNo, "", new { @class = "invalid-feedback" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-2"></i>Create Scholar
                            </button>
                            <a href="@Url.Action("Index", "Student")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>