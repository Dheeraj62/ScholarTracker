@model ScholarTracker.Models.StudentModel

@{
    ViewBag.Title = "Scholar Details";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-user-graduate me-2"></i>Scholar Details
                        </h3>
                        <div class="badge bg-light text-primary fs-6">
                            <i class="fas fa-id-card me-1"></i> @Model.EnrollmentNo
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Scholar Photo Placeholder -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="profile-image-container bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto"
                                 style="width: 200px; height: 200px;">
                                <i class="fas fa-user fa-4x text-secondary"></i>
                            </div>
                            <div class="mt-3">
                                <span class="badge bg-info text-dark fs-6">
                                    <i class="fas fa-calendar-day me-1"></i>
                                    Member since @Model.AdmissionDate.ToString("yyyy")
                                </span>
                            </div>
                        </div>

                        <!-- Scholar Details -->
                        <div class="col-md-8">
                            <div class="details-container">
                                <h4 class="text-primary mb-4">Personal Information</h4>

                                <div class="detail-item row mb-3">
                                    <div class="col-sm-4 fw-bold">
                                        <i class="fas fa-user me-2"></i>Full Name:
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.FullName
                                    </div>
                                </div>

                                <div class="detail-item row mb-3">
                                    <div class="col-sm-4 fw-bold">
                                        <i class="fas fa-male me-2"></i>Father's Name:
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.FatherName
                                    </div>
                                </div>

                                <div class="detail-item row mb-3">
                                    <div class="col-sm-4 fw-bold">
                                        <i class="fas fa-female me-2"></i>Mother's Name:
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.MotherName
                                    </div>
                                </div>

                                <div class="detail-item row mb-3">
                                    <div class="col-sm-4 fw-bold">
                                        <i class="fas fa-calendar-check me-2"></i>Admission Date:
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.AdmissionDate.ToString("dd MMMM yyyy")
                                    </div>
                                </div>

                                <div class="detail-item row mb-3">
                                    <div class="col-sm-4 fw-bold">
                                        <i class="fas fa-id-card-alt me-2"></i>Enrollment Number:
                                    </div>
                                    <div class="col-sm-8">
                                        <span class="badge bg-primary">@Model.EnrollmentNo</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Student")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <div>
                            <a href="@Url.Action("Edit", "Student", new { id = Model.Id })" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-image-container {
        border: 4px solid #e9ecef;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .detail-item {
        padding: 0.75rem;
        border-radius: 0.5rem;
        transition: all 0.2s;
    }

        .detail-item:hover {
            background-color: #f8f9fa;
        }
</style>
