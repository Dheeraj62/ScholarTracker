@model ScholarTracker.Models.StudentModel

@{
    ViewBag.Title = "Delete Scholar";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Scholar Confirmation
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-user-slash me-2"></i>Warning: Permanent Action
                        </h4>
                        <p>You are about to permanently delete this scholar record. This action cannot be undone.</p>
                        <hr>
                        <p class="mb-0">Please confirm that you want to delete:</p>
                    </div>

                    <div class="student-details-card mb-4">
                        <div class="text-center mb-3">
                            <div class="profile-icon-container bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                                 style="width: 80px; height: 80px;">
                                <i class="fas fa-user-graduate fa-2x text-danger"></i>
                            </div>
                        </div>
                        <h4 class="text-danger">@Model.FullName</h4>
                        <div class="text-muted">
                            <div><i class="fas fa-id-card me-2"></i> @Model.EnrollmentNo</div>
                            <div><i class="fas fa-calendar-day me-2"></i> Member since @Model.AdmissionDate.ToString("yyyy")</div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg px-4" id="confirmDeleteBtn">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                            <a href="@Url.Action("Index", "Student")" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light text-center text-muted">
                    <small>
                        <i class="fas fa-info-circle me-1"></i>
                        Deleting this record will remove all associated data permanently.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-icon-container {
        border: 3px solid #dc3545;
        box-shadow: 0 0.25rem 0.5rem rgba(220, 53, 69, 0.2);
    }

    .student-details-card {
        padding: 1.5rem;
        border-radius: 0.5rem;
        background-color: #f8f9fa;
        border-left: 4px solid #dc3545;
    }

    #confirmDeleteBtn {
        transition: all 0.3s;
    }

        #confirmDeleteBtn:hover {
            transform: scale(1.02);
            box-shadow: 0 0.5rem 1rem rgba(220, 53, 69, 0.25);
        }
</style>