@model IEnumerable<ScholarTracker.Models.StudentModel>

@{
    ViewBag.Title = "Scholars Management";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-user-graduate me-2"></i>Scholars List
                        </h3>
                        <a href="@Url.Action("Create", "Student")" class="btn btn-light">
                            <i class="fas fa-plus-circle me-1"></i> Add New Scholar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-user me-1"></i> Full Name</th>
                                    <th><i class="fas fa-user-friends me-1"></i> Father Name</th>
                                    <th><i class="fas fa-user-friends me-1"></i> Mother Name</th>
                                    <th><i class="fas fa-calendar-day me-1"></i> Admission Date</th>
                                    <th><i class="fas fa-id-card me-1"></i> Enrollment No</th>
                                    <th class="text-center"><i class="fas fa-cogs me-1"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@student.FullName</td>
                                        <td class="align-middle">@student.FatherName</td>
                                        <td class="align-middle">@student.MotherName</td>
                                        <td class="align-middle">@student.AdmissionDate.ToString("yyyy-MM-dd")</td>
                                        <td class="align-middle">@student.EnrollmentNo</td>
                                        <td class="text-center text-nowrap">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "Student", new { id = student.Id })"
                                                   class="btn btn-sm btn-info"
                                                   title="View Details"
                                                   data-bs-toggle="tooltip">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Student", new { id = student.Id })"
                                                   class="btn btn-sm btn-warning"
                                                   title="Edit"
                                                   data-bs-toggle="tooltip">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "Student", new { id = student.Id })"
                                                   class="btn btn-sm btn-danger"
                                                   title="Delete"
                                                   data-bs-toggle="tooltip"
                                                   onclick="return confirm('Are you sure you want to delete this scholar?');">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info mt-3 mb-0">
                            <i class="fas fa-info-circle me-2"></i> No scholars found. Click "Add New Scholar" to create one.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>