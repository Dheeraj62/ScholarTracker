@model ScholarTracker.Models.Supervisor

@{
    ViewBag.Title = "Delete Supervisor";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="card shadow-sm border-danger mb-4">
    <div class="card-body">
        <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Confirmation</h2>
        <p class="mt-3">Are you sure you want to delete this supervisor? This action cannot be undone.</p>

        <div class="row mt-4">
            <div class="col-md-6">
                <h4>Supervisor Details</h4>
                <hr />
                <p><strong>First Name:</strong> @Html.DisplayFor(model => model.FirstName)</p>
                <p><strong>Last Name:</strong> @Html.DisplayFor(model => model.LastName)</p>
                <p><strong>Designation:</strong> @Html.DisplayFor(model => model.Designation)</p>
                <p><strong>Country:</strong> @Html.DisplayFor(model => model.Country)</p>
                <p><strong>Address:</strong> @Html.DisplayFor(model => model.Address)</p>
            </div>
        </div>

        <hr />

        @using (Html.BeginForm("DeleteConfirmed", "Supervisor", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a href="@Url.Action("Index", "Supervisor")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        }
    </div>
</div>
