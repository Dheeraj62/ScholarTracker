@model IEnumerable<ScholarTracker.Models.Supervisor>

@{
    ViewBag.Title = "Supervisors";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<h2>Supervisors</h2>

<p>
    <a href="@Url.Action("Create", "Supervisor")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No supervisors found. Please create a new one.
    </div>
}
else
{
    <table class="table table-striped table-bordered table-responsive">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
                <th>@Html.DisplayNameFor(model => model.First().State)</th>
                <th>@Html.DisplayNameFor(model => model.First().Country)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Supervisor", new { id = item.Id })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="@Url.Action("Details", "Supervisor", new { id = item.Id })" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <form action="@Url.Action("DeleteConfirmed", "Supervisor", new { id = item.Id })" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this supervisor?');">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
