<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Scholar Tracker</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/src/assets/images/favicon.png" />

    <!-- Custom CSS -->
    <link href="~/Content/src/assets/extra-libs/c3/c3.min.css" rel="stylesheet" />
    <link href="~/Content/src/assets/libs/chartist/dist/chartist.min.css" rel="stylesheet" />
    <link href="~/Content/src/assets/extra-libs/jvector/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <link href="~/Content/src/dist/css/style.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="main-wrapper">
        <!-- ✅ ALERT TOAST MESSAGES -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show position-fixed top-0 end-0 m-4 shadow" role="alert" style="z-index: 1055;">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 end-0 m-4 shadow" role="alert" style="z-index: 1055;">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- ✅ GLOBAL LOADER -->
        <div id="global-loader" class="d-none position-fixed w-100 h-100 bg-white d-flex align-items-center justify-content-center" style="top:0;left:0;z-index:9999;">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
        </div>

        @RenderBody()
    </div>

    <!-- JS Dependencies -->
    <script src="~/Content/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Content/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/dist/js/app-style-switcher.js"></script>
    <script src="~/Content/dist/js/feather.min.js"></script>
    <script src="~/Content/assets/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Content/dist/js/sidebarmenu.js"></script>
    <script src="~/Content/dist/js/custom.min.js"></script>
    <script src="~/Content/assets/extra-libs/c3/d3.min.js"></script>
    <script src="~/Content/assets/extra-libs/c3/c3.min.js"></script>
    <script src="~/Content/assets/libs/chartist/dist/chartist.min.js"></script>
    <script src="~/Content/assets/libs/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.min.js"></script>
    <script src="~/Content/assets/extra-libs/jvector/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/Content/assets/extra-libs/jvector/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Content/dist/js/pages/dashboards/dashboard1.min.js"></script>

    <script>
        // Hide bootstrap alert automatically after 5 seconds
        document.addEventListener("DOMContentLoaded", function () {
            const alerts = document.querySelectorAll(".alert-dismissible");
            setTimeout(() => {
                alerts.forEach(alert => {
                    alert.classList.remove("show");
                    alert.classList.add("fade");
                });
            }, 5000);
        });
    </script>

</body>
</html>
