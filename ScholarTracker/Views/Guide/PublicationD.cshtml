@model ScholarTracker.Models.PublicationDetails
@{
    ViewBag.Title = "PublicationD";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

@{
    ViewData["Title"] = "Publication Details";
}

<div class="container-fluid">
    <h2 class="text-center text-dark">Publication Details</h2>
    <form id="publicationForm" class="needs-validation" novalidate>
        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Journal Index:</label>
                <select class="form-select" required>
                    <option value="">Select Index</option>
                    <option value="SCI">SCI</option>
                    <option value="Scopus">Scopus</option>
                </select>
                <div class="invalid-feedback">Please select a journal index.</div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Journal Name:</label>
                <input type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter journal name.</div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label class="form-label">Title Of Paper:</label>
                <input type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter paper title.</div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Publisher Name:</label>
                <input type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter publisher name.</div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label class="form-label">Impact Factor:</label>
                <input type="number" step="0.01" class="form-control" required>
                <div class="invalid-feedback">Please enter impact factor.</div>
            </div>
            <div class="col-md-4">
                <label class="form-label">Date Of Issue:</label>
                <input type="date" class="form-control" required>
                <div class="invalid-feedback">Please enter issue date.</div>
            </div>
            <div class="col-md-4">
                <label class="form-label">Volume:</label>
                <input type="number" class="form-control" required>
                <div class="invalid-feedback">Please enter volume.</div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label class="form-label">Issue:</label>
                <input type="number" class="form-control" required>
                <div class="invalid-feedback">Please enter issue number.</div>
            </div>
            <div class="col-md-4">
                <label class="form-label">DOI:</label>
                <input type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter DOI.</div>
            </div>
            <div class="col-md-4">
                <label class="form-label">Page No:</label>
                <input type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter page numbers.</div>
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Upload Publication:</label>
            <input type="file" class="form-control" required>
            <div class="invalid-feedback">Please upload the publication file.</div>
        </div>

        <div class="mt-4 ">
            <button type="submit" class="btn btn-danger color1" id="addSubject">Submit</button>
        </div>
    </form>

    <hr>

    <h3 class="text-center mt-4">Submitted Publications</h3>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>SNo</th>
                <th>Journal Index</th>
                <th>Title</th>
                <th>Publisher</th>
                <th>Impact Factor</th>
                <th>DOI</th>
                <th>Volume</th>
                <th>Issue</th>
                <th>Page No</th>
            </tr>
        </thead>
        <tbody id="publicationTable">
        </tbody>
    </table>
</div>
