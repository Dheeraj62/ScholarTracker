@{
    ViewBag.Title = "Supervisor Details";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-user-tie me-2"></i>Supervisor Details
                    </h2>
                </div>
                <div class="card-body">
                    <form id="supervisorForm" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Personal Information Section -->
                            <div class="col-md-6">
                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-id-card me-2"></i>Personal Information
                                </h5>

                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Info. as per records</label>
                                    <input type="text" class="form-control" id="info" required>
                                    <div class="invalid-feedback">Please provide information as per records.</div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">Aadhaar Card No.</label>
                                            <input type="text" class="form-control" id="adhar"
                                                   pattern="\d{12}" title="Enter 12-digit Aadhaar number" required>
                                            <div class="invalid-feedback">Please enter a valid 12-digit Aadhaar number.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">PAN Card No.</label>
                                            <input type="text" class="form-control" id="pan"
                                                   pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" title="Enter valid PAN number" required>
                                            <div class="invalid-feedback">Please enter a valid PAN number (e.g., ABCDE1234F).</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">Title</label>
                                            <select class="form-select" id="title">
                                                <option>Dr.</option>
                                                <option>Prof.</option>
                                                <option>Mr.</option>
                                                <option>Ms.</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">Full Name</label>
                                            <div class="row g-2">
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" id="firstName" placeholder="First" required>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" id="middleName" placeholder="Middle">
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" id="lastName" placeholder="Last" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact Information Section -->
                            <div class="col-md-6">
                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-address-book me-2"></i>Contact Information
                                </h5>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">Phone Number</label>
                                            <input type="tel" class="form-control" id="phone"
                                                   pattern="[0-9]{10}" title="Enter 10-digit phone number" required>
                                            <div class="invalid-feedback">Please enter a valid 10-digit phone number.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">Email ID</label>
                                            <input type="email" class="form-control" id="email" required>
                                            <div class="invalid-feedback">Please enter a valid email address.</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">Designation</label>
                                    <input type="text" class="form-control" id="designation" required>
                                    <div class="invalid-feedback">Please enter your designation.</div>
                                </div>

                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-map-marker-alt me-2"></i>Address Information
                                </h5>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">Country</label>
                                            <input type="text" class="form-control" value="India" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label fw-bold">State</label>
                                            <select class="form-select" id="state">
                                                <option>Uttar Pradesh</option>
                                                <option>Delhi</option>
                                                <option>Maharashtra</option>
                                                <option>Other</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">City/District</label>
                                    <input type="text" class="form-control" value="Lucknow" readonly>
                                </div>

                                <div class="form-group mb-4">
                                    <label class="form-label fw-bold">Address</label>
                                    <textarea class="form-control" id="address" rows="3" required></textarea>
                                    <div class="invalid-feedback">Please enter your address.</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-check-circle me-2"></i>Submit
                            </button>
                            <button type="reset" class="btn btn-outline-secondary px-4 ms-2">
                                <i class="fas fa-undo me-2"></i>Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>